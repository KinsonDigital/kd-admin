{
	"cSpell.words": [
		"aarch",
		"cicd",
		"kdcli",
		"Kinson",
		"LOCALAPPDATA",
		"msvc",
		"setx"
	],
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/node_modules": true,
		"**/dist": true,
	},
	"deno.enable": true,
	"deno.lint": true,
	"[typescript]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 4,
	},
	"[yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 4,
	},
	"editor.detectIndentation": false,
	"[github-actions-workflow]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
}
