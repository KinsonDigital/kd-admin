{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clear-screen",
			"detail": "Clears the terminal screen.",
			"windows": {
				"command": "cls"
			},
			"type": "shell",
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"reveal": "always"
			},
			"group": "build"
		},
		{
			"label": "build",
			"detail": "Builds the project by running deno check.",
			"dependsOn": ["clear-screen"],
			"command": "deno",
			"type": "shell",
			"args": [
				"run",
				"--allow-read",
				"--allow-run",
				"--allow-sys",
				"${workspaceFolder}/.github/cicd/scripts/deno-check.ts"
			],
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"reveal": "always"
			},
			"group": "build"
		},
		{
			"label": "lint",
			"detail": "Performs linting on the project source code.",
			"dependsOn": ["clear-screen"],
			"command": "deno",
			"type": "shell",
			"args": [
				"lint",
			],
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"reveal": "always"
			},
			"group": "build"
		},
		{
			"label": "cache-dependencies",
			"detail": "Cache dependencies for the project.",
			"dependsOn": ["clear-screen"],
			"command": "deno",
			"type": "shell",
			"args": [
				"cache",
				"./deps.ts"
			],
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"reveal": "always"
			},
			"group": "build"
		}
	]
}
