{
    "version": "v1.0.0-preview.5",
    "tasks": {
        "check": "deno check **/*/*.ts",
        "tests": "deno test ./Tests/*Tests.ts",
        "reload-cache": "deno cache --reload --lock=deno.lock \"*/**/*.ts\""
    },
    "lint": {
        "include": [
            "src/",
            "tests/"
        ]
    },
    "fmt": {
        "include": [
            "src/",
            "tests/"
        ],
        "exclude": [
            "**/*.md",
            "**/*.json",
            "**/*.js",
            "**/*.yml",
            "**/*.yaml"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    }
}
