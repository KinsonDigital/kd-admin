{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{ // PLAYGROUND
			"request": "launch",
			"name": "Playground",
			"type": "node",
			"program": "${workspaceFolder}/playground.ts",
			"cwd": "${workspaceFolder}",
			"env": {
				"WORKING_DIR": "${workspaceFolder}",
				"GITHUB_TOKEN": "${env:CICD_TOKEN}",
				"OWNER_NAME": "KinsonDigital",
				"REPO_NAME": "kd-admin"
			},
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--inspect-wait",
				"--allow-all",
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		},
		{ // CREATE PR (DEBUG)
			"name": "Create PR (Debug)",
			"request": "launch",
			"type": "node",
			"program": "${workspaceFolder}/src/main.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--allow-env",
				"--allow-read",
				"--allow-net",
				"--inspect-wait",
			],
			"args": [
				"create-pr",
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		},
		{ // PREPARE RELEASE (DEBUG)
			"name": "Prepare Release (Debug)",
			"request": "launch",
			"type": "node",
			"program": "${workspaceFolder}/src/main.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--allow-env",
				"--allow-read",
				"--allow-write",
				"--allow-net",
				"--allow-run",
				"--inspect-wait",
			],
			"args": [
				"prepare-for-release",
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		},
		{ // DEBUG UNIT TEST FILE
			"name": "Debug Unit Test File",
			"request": "launch",
			"type": "node",
			"cwd": "${workspaceFolder}/tests",
			"runtimeArgs": [
				"test",
				"--inspect-brk",
				"--allow-all",
				"${fileBasename}",
			],
			"attachSimplePort": 9229,
			"runtimeExecutable": "npm",
			"skipFiles": [
				"<node_internals>/**"
			],
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
		},
		{ // GET VERSION CICD SCRIPT
			"request": "launch",
			"name": "Get Version CICD Script",
			"type": "node",
			"program": "${workspaceFolder}/.github/cicd/scripts/get-version.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--inspect-wait",
				"--allow-read",
				"--allow-write",
				"--allow-env",
			],
			"attachSimplePort": 9229,
		},
		{ // CHECK RELEASE NOTES CICD SCRIPT
			"request": "launch",
			"name": "Check Release Notes CICD Script",
			"type": "node",
			"program": "${workspaceFolder}/.github/cicd/scripts/check-release-notes.ts",
			"cwd": "${workspaceFolder}",
			"env": {
				"RELEASE_TYPE": "Preview",
				"VERSION": "v1.0.0-preview.1"
			},
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--allow-env",
				"--allow-read",
				"--inspect-wait",
			],
			"attachSimplePort": 9229,
		},
		{ // INSTALL SCRIPT
			"request": "launch",
			"name": "Install Script",
			"type": "node",
			"program": "${workspaceFolder}/installation/install.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--allow-read",
				"--allow-write",
				"--allow-net",
				"--allow-run",
				"--inspect-wait",
			],
			"args": [
				"latest",
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		},
		{ // UPDATE SCRIPT
			"request": "launch",
			"name": "Update Script",
			"type": "node",
			"program": "${workspaceFolder}/installation/update.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--allow-read",
				"--allow-write",
				"--allow-net",
				"--inspect-wait",
			],
			"args": [
				"latest",
			],
			"attachSimplePort": 9229,
			"console": "integratedTerminal"
		}
	]
}
