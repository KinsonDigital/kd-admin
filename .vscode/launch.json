{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{ // PLAYGROUND
			"request": "launch",
			"name": "Playground",
			"type": "node",
			"program": "${workspaceFolder}/playground.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--inspect-wait",
				"--allow-all",
			],
			"args": [
				"${workspaceFolder}",
				"${env:CICD_TOKEN}",
			],
			"attachSimplePort": 9229,
		},
		{ // DEBUG APP
			"name": "Debug App",
			"request": "launch",
			"type": "node",
			"program": "${workspaceFolder}/src/main.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--inspect-wait",
				"--allow-all"
			],
			"attachSimplePort": 9229
		},
		{ // DEBUG UNIT TEST FILE
			"name": "Debug Unit Test File",
			"request": "launch",
			"type": "node",
			"cwd": "${workspaceFolder}/tests",
			"runtimeArgs": [
				"test",
				"--inspect-brk",
				"--allow-all",
				"${fileBasename}",
			],
			"attachSimplePort": 9229,
			"runtimeExecutable": "npm",
			"skipFiles": [
				"<node_internals>/**"
			],
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
		},
		{ // COMPILER CICD SCRIPT
			"name": "Compiler CICD Script",
			"request": "launch",
			"type": "node",
			"program": "${workspaceFolder}/.github/cicd/scripts/compiler.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--inspect-wait",
				"--allow-read",
				"--allow-run",
			],
			"args": [
				"all",
			],
			"attachSimplePort": 9229,
			"preLaunchTask": "clean-dist"
		},
		{ // GET VERSION CICD SCRIPT
			"request": "launch",
			"name": "Get Version CICD Script",
			"type": "node",
			"program": "${workspaceFolder}/.github/cicd/scripts/get-version.ts",
			"cwd": "${workspaceFolder}",
			"windows": {
				"runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
			},
			"linux": {
				"runtimeExecutable": "${userHome}/.deno/bin/deno"
			},
			"runtimeArgs": [
				"run",
				"--inspect-wait",
				"--allow-read",
				"--allow-write",
				"--allow-env",
			],
			"attachSimplePort": 9229,
		},
	]
}
