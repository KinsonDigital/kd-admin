{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"command": "deno",
			"type": "shell",
			"args": [
				"run",
				"--allow-read",
				"--allow-run",
				"--allow-sys",
				"${workspaceFolder}/.github/cicd/scripts/deno-check.ts"
			],
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"reveal": "always"
			},
			"group": "build"
		},
		{
			"label": "Lint",
			"command": "deno",
			"type": "shell",
			"args": [
				"lint",
			],
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"reveal": "always"
			},
			"group": "build"
		}
	]
}
