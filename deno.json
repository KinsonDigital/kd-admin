{
    "version": "v1.0.0-preview.1",
    "tasks": {
        "build": "./.github/cicd/scripts/deno-build.ts",
        "tests": "deno test ./Tests/*Tests.ts"
    },
    "lint": {
        "include": [
            "src/",
            "tests/"
        ]
    },
    "fmt": {
        "include": [
            "src/",
            "tests/"
        ],
        "exclude": [
            "**/*.md",
            "**/*.json",
            "**/*.js",
            "**/*.yml",
            "**/*.yaml"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    }
}
